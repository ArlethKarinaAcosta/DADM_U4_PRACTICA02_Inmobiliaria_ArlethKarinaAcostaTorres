<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#DBA901">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="INMOBILIARIA ACOSTA"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logoinmobiliaria"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos del propietario"
        android:textStyle="italic"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDP: "
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:textSize="15dp"
            android:hint="Coloca el identificador"
            android:id="@+id/idEdit"
            android:layout_margin="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="NOMBRE: "
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre del propietario"
            android:ems="14"
            android:id="@+id/nombreEdit"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="DOMICILIO: "
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Direccion"
            android:ems="14"
            android:id="@+id/domicilioEdit"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="TELEFONO: "
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Escribe tu telefono"
            android:layout_margin="5dp"
            android:ems="14"
            android:id="@+id/telefonoEdit"
            android:textSize="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="INSERTAR"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#F5F6CE"
            android:layout_gravity="center"
            android:id="@+id/insertarBoton"
            android:layout_margin="15dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ACTUALIZAR"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#F5F6CE"
            android:layout_gravity="center"
            android:id="@+id/actualizarBoton"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ELIMINAR"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#F5F6CE"
            android:layout_gravity="center"
            android:id="@+id/eliminarBoton"
            android:layout_margin="15dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CONSULTAR"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#F5F6CE"
            android:layout_gravity="center"
            android:id="@+id/consultarBoton"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="REGISTRAR UN MUEBLE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#F5F6CE"
        android:layout_gravity="center"
        android:id="@+id/registrar"
        android:layout_margin="15dp"/>

</LinearLayout>
